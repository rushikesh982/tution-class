<table border="1" cellpadding="10">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Subject</th>
      <th>Course</th>
      <th>Message</th>
      <th>Submitted At</th>
    </tr>
  </thead>
  <tbody>
    <% messages.forEach(msg => { %>
      <tr>
        <td><%= msg.full_name %></td>
        <td><%= msg.email %></td>
        <td><%= msg.phone %></td>
        <td><%= msg.subject %></td>
        <td><%= msg.course_interest %></td>
        <td><%= msg.message %></td>
        <td><%= msg.created_at.toLocaleString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

