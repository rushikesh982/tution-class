<%- include('navbar.ejs')%>
  <style>
    :root {
      --secondary-color: #2c3e50;
      --accent-color: #e74c3c;
      --light-gray: #f8f9fa;
      --dark-gray: #343a40;
    }
    
    /* body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f5f7fa;
    } */
    
    .container {
      padding-bottom: 3rem;
    }
    
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid #dee2e6;
    }
    
    .page-title {
      color: var(--secondary-color);
      font-weight: 600;
    }
    
    .btn-add {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      font-weight: 500;
    }
    
    .btn-add:hover {
      background-color: #2980b9;
      border-color: #2980b9;
    }
    
    .table-container {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
      overflow-x: auto;
    }
    
    .table {
      margin-bottom: 0;
    }
    
    .table thead {
      background-color: var(--secondary-color);
      color: white;
    }
    
    .table th {
      font-weight: 500;
      vertical-align: middle;
    }
    
    .table td {
      vertical-align: middle;
    }
    
    .action-btns {
      white-space: nowrap;
    }
    
    .btn-edit {
      background-color: #f39c12;
      border-color: #f39c12;
      color: white;
    }
    
    .btn-edit:hover {
      background-color: #e67e22;
      border-color: #e67e22;
      color: white;
    }
    
    .btn-delete {
      background-color: var(--accent-color);
      border-color: var(--accent-color);
      color: white;
    }
    
    .btn-delete:hover {
      background-color: #c0392b;
      border-color: #c0392b;
      color: white;
    }
    
    .social-icon {
      font-size: 1.2rem;
      margin-right: 5px;
    }
    
    .facebook-icon {
      color: #3b5998;
    }
    
    .instagram-icon {
      color: #e4405f;
    }
    
    .linkedin-icon {
      color: #0077b5;
    }
    
    .youtube-icon {
      color: #cd201f;
    }
    
    .empty-state {
      text-align: center;
      padding: 3rem;
      color: #6c757d;
    }
    
    .empty-state i {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: #dee2e6;
    }
    
    @media (max-width: 992px) {
      .table-container {
        border-radius: 0;
      }
      
      .page-header {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .btn-add {
        margin-top: 1rem;
        width: 100%;
      }
    }
    
    @media (max-width: 768px) {
      .table td, .table th {
        padding: 0.75rem 0.5rem;
      }
      
      .btn {
        padding: 0.375rem 0.5rem;
        font-size: 0.875rem;
      }
    }
    
    .truncate-text {
      max-width: 150px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      display: inline-block;
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <div class="page-header">
      <h1 class="page-title">Contact Information Management</h1>
    </div>
    
    <% if (contacts.length === 0) { %>
      <div class="empty-state bg-white rounded shadow-sm p-4">
        <i class="fas fa-address-book"></i>
        <h3>No Contact Information Found</h3>
        <p class="mb-4">You haven't added any contact information yet.</p>
        <a href="/admin/addContact" class="btn btn-primary">
          <i class="fas fa-plus me-2"></i>Add Your First Contact
        </a>
      </div>
    <% } else { %>
      <div class="table-container">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Contact Info</th>
              <th>Emails</th>
              <th>Location</th>
              <th>Social Media</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% contacts.forEach((item, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td>
                  <% if (item.phone_main) { %>
                    <div><strong>Main:</strong> <%= item.phone_main %></div>
                  <% } %>
                  <% if (item.phone_admissions) { %>
                    <div><strong>Admissions:</strong> <%= item.phone_admissions %></div>
                  <% } %>
                  <% if (item.phone_support) { %>
                    <div><strong>Support:</strong> <%= item.phone_support %></div>
                  <% } %>
                </td>
                <td>
                  <% if (item.email_general) { %>
                    <div class="truncate-text" title="<%= item.email_general %>">
                      <strong>General:</strong> <%= item.email_general %>
                    </div>
                  <% } %>
                  <% if (item.email_admissions) { %>
                    <div class="truncate-text" title="<%= item.email_admissions %>">
                      <strong>Admissions:</strong> <%= item.email_admissions %>
                    </div>
                  <% } %>
                  <% if (item.email_support) { %>
                    <div class="truncate-text" title="<%= item.email_support %>">
                      <strong>Support:</strong> <%= item.email_support %>
                    </div>
                  <% } %>
                </td>
                <td>
                  <div class="truncate-text" title="<%= item.address_line1 %> <%= item.address_line2 %>">
                    <%= item.address_line1 %> <%= item.address_line2 %>
                  </div>
                  <div>
                    <%= item.city %>, <%= item.state %> <%= item.zipcode %>
                  </div>
                  <div><%= item.country %></div>
                </td>
                <td>
                  <div class="d-flex flex-wrap">
                    <% if (item.facebook) { %>
                      <a href="<%= item.facebook %>" target="_blank" class="me-3">
                        <i class="fab fa-facebook-square social-icon facebook-icon"></i>
                      </a>
                    <% } %>
                    <% if (item.instagram) { %>
                      <a href="<%= item.instagram %>" target="_blank" class="me-3">
                        <i class="fab fa-instagram social-icon instagram-icon"></i>
                      </a>
                    <% } %>
                    <% if (item.linkedin) { %>
                      <a href="<%= item.linkedin %>" target="_blank" class="me-3">
                        <i class="fab fa-linkedin social-icon linkedin-icon"></i>
                      </a>
                    <% } %>
                    <% if (item.youtube) { %>
                      <a href="<%= item.youtube %>" target="_blank">
                        <i class="fab fa-youtube social-icon youtube-icon"></i>
                      </a>
                    <% } %>
                  </div>
                </td>
                <td class="action-btns">
                  <a href="/admin/editContact/<%= item.id %>" class="btn btn-sm btn-edit me-2">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="/admin/deleteContact/<%= item.id %>" class="btn btn-sm btn-delete" onclick="return confirm('Are you sure you want to delete this contact information?')">
                    <i class="fas fa-trash-alt"></i>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Add responsive behavior for small screens
    document.addEventListener('DOMContentLoaded', function() {
      function handleResponsiveTable() {
        const tableContainer = document.querySelector('.table-container');
        if (window.innerWidth < 768) {
          tableContainer.classList.add('table-responsive');
        } else {
          tableContainer.classList.remove('table-responsive');
        }
      }
      
      window.addEventListener('resize', handleResponsiveTable);
      handleResponsiveTable();
    });
  </script>
