<%- include('navbar') %>

<div class="form-container">
  <div class="form-header">
    <h1><i class="fas fa-calendar-plus"></i> Add New Class Schedule</h1>
    <a href="/admin/class-schedules" class="back-link">
      <i class="fas fa-arrow-left"></i> Back to Schedules
    </a>
  </div>

  <form action="/admin/addSchedule" method="POST" class="schedule-form">
    <div class="form-grid">
      <div class="form-group">
        <label for="subject">Subject</label>
        <div class="input-wrapper">
          <i class="fas fa-book"></i>
          <input type="text" id="subject" name="subject" required placeholder="Enter subject name">
        </div>
      </div>

      <div class="form-group">
        <label for="heading">Course Title</label>
        <div class="input-wrapper">
          <i class="fas fa-heading"></i>
          <input type="text" id="heading" name="heading" required placeholder="Enter course title">
        </div>
      </div>

      <div class="form-group">
        <label for="time_slot">Time Slot</label>
        <div class="input-wrapper">
          <i class="fas fa-clock"></i>
          <input type="text" id="time_slot" name="time_slot" required placeholder="e.g. 9:00 AM - 11:00 AM">
        </div>
      </div>

      <div class="form-group">
        <label for="days">Days</label>
        <div class="input-wrapper">
          <i class="fas fa-calendar-day"></i>
          <input type="text" id="days" name="days" required placeholder="e.g. Mon, Wed, Fri">
        </div>
      </div>

      <div class="form-group">
        <label for="instructors">Instructor(s)</label>
        <div class="input-wrapper">
          <i class="fas fa-chalkboard-teacher"></i>
          <input type="text" id="instructors" name="instructors" required placeholder="Enter instructor name(s)">
        </div>
      </div>

      <div class="form-group">
        <label for="seats_left">Available Seats</label>
        <div class="input-wrapper">
          <i class="fas fa-chair"></i>
          <input type="number" id="seats_left" name="seats_left" required placeholder="Enter number of seats" min="1">
        </div>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="submit-btn">
        <i class="fas fa-save"></i> Add Schedule
      </button>
      <a href="/admin/class-schedules" class="cancel-btn">
        <i class="fas fa-times"></i> Cancel
      </a>
    </div>
  </form>
</div>

<%- include('footer') %>

<!-- Font Awesome for icons -->
