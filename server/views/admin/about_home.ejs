<%- include('navbar') %>

<div class="about-page">
  <div class="container py-5">
    <!-- Main About Section -->
    <div class="row mb-5">
      <div class="col-lg-8 mx-auto text-center">
        <h2 class="display-4 mb-4">About Excellence Academy</h2>
        <div class="divider mx-auto"></div>
      </div>
    </div>

    <% if (about) { %>
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="about-card card shadow-lg">
            <div class="card-body p-4 p-md-5">
              <div class="row">
                <!-- Stats Section -->
                <div class="col-md-5 mb-4 mb-md-0">
                  <div class="stats-box p-4 h-100">
                    <div class="stat-item mb-4">
                      <div class="stat-value"><%= about.experience_years %>+</div>
                      <div class="stat-label">Years Experience</div>
                    </div>
                    <div class="stat-item mb-4">
                      <div class="stat-value"><%= about.students_taught %>+</div>
                      <div class="stat-label">Students Taught</div>
                    </div>
                    <div class="stat-item">
                      <div class="stat-value"><%= about.success_rate %>%</div>
                      <div class="stat-label">Success Rate</div>
                    </div>
                  </div>
                </div>
                
                <!-- Description Section -->
                <div class="col-md-7">
                  <h3 class="mb-4">Our Story</h3>
                  <p class="about-description"><%= about.description %></p>
                  
                  <div class="action-buttons mt-4 pt-3">
                    <a href="/admin/about_edit/<%= about.id %>" class="btn btn-primary btn-lg mr-3">
                      <i class="fas fa-edit mr-2"></i>Edit
                    </a>
                    <a href="/admin/about/delete/<%= about.id %>" class="btn btn-outline-danger btn-lg" onclick="return confirm('Delete this record?')">
                      <i class="fas fa-trash-alt mr-2"></i>Delete
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="row">
        <div class="col-12 text-center py-5">
          <div class="no-data-card card shadow-sm p-5">
            <i class="fas fa-info-circle fa-4x mb-4 text-muted"></i>
            <h3 class="mb-3">No Data Available</h3>
            <p class="text-muted mb-4">Please add information about your academy</p>
            <a href="/admin/about/add" class="btn btn-success btn-lg">
              <i class="fas fa-plus mr-2"></i>Add About Info
            </a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('footer') %>

<style>
  /* About Page Styles */
  .about-page {
    background-color: #f8f9fa;
    min-height: calc(100vh - 120px);
  }
  
  .divider {
    width: 80px;
    height: 4px;
    background: linear-gradient(to right, #4e54c8, #8f94fb);
    margin-bottom: 30px;
  }
  
  .about-card {
    border-radius: 15px;
    border: none;
    overflow: hidden;
  }
  
  .stats-box {
    background-color: #f0f4ff;
    border-radius: 10px;
  }
  
  .stat-item {
    text-align: center;
    padding: 15px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }
  
  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    color: #4e54c8;
    line-height: 1;
  }
  
  .stat-label {
    font-size: 1rem;
    color: #6c757d;
    font-weight: 500;
  }
  
  .about-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #495057;
  }
  
  .no-data-card {
    border-radius: 15px;
    background-color: white;
  }
  
  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .stat-value {
      font-size: 2rem;
    }
    
    .about-description {
      font-size: 1rem;
    }
    
    .action-buttons .btn {
      display: block;
      width: 100%;
      margin-bottom: 10px;
    }
    
    .action-buttons .btn:last-child {
      margin-bottom: 0;
    }
  }
  
  @media (max-width: 576px) {
    .stat-item {
      padding: 10px;
    }
    
    .stat-value {
      font-size: 1.8rem;
    }
  }
</style>